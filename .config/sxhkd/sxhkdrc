# Volume Control
XF86AudioRaiseVolume
    bash -c "pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume @DEFAULT_SINK@ +5%"

XF86AudioLowerVolume
    bash -c "pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume @DEFAULT_SINK@ -5%"

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

# increase/decrease brightness by 10
XF86MonBrightness{Up,Down}
    light {-A,-U} 10

# Terminal Emulator
super + Return
    alacritty	

# Broswer 
super + shift + Return
    firefox

# Program Launcher
super + space
    rofi -modi run,drun -show drun -location 7 -yoffset -50 -xoffset 15 -line-padding 4 -columns 1 -width 25 -padding 25 -show-icons -drun-icon-theme "Papirus" -font "Iosevka 14"

# Rofimoji
super + e
    rofimoji

# Toggling the bar
super + i
    polybar-msg cmd toggle; bspc config bottom_padding 0
#    /home/razhan/.config/polybar/scripts/toggle-bar.sh {hide,show}

# Reload this sxhkd config file 
super + Escape
	pkill -USR1 -x sxhkd; dunstify "Sxhkd configuration reloaded"

# Reload wallpaper
super + alt + w
    feh --bg-fill --no-fehbg --randomize ~/Images/Wallpapers

# Save Screenshot
Print
    maim -i $(xdotool getactivewindow) -u ~/Images/Captures/$(date +%s).png && dunstify "Cheese!~" "Screenshot saved to ~/Images/Captures"

# Save Selection 
super + Print
    maim -su ~/Images/Captures/$(date +%s).png && dunstify "Cheese!~" "Selection saved to ~/Images/Captures"

# Screenshot to clipboard
shift + Print
    maim -u -i $(xdotool getactivewindow) | xclip -se c -t image/png && dunstify "Cheese!~" "Screenshot copied to Clipboard"

# Selection  to clipboard
super + shift + Print
    maim -su | xclip -se c -t image/png && dunstify "Cheese!~" "Selection copied to Clipboard"

#####################
# System Hotkeys
#####################
super + ctrl + p
    poweroff
    #light-locker-command -l

super + ctrl + s
    systemctl suspend 
#####################
# bspwm Hotkeys
#####################

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# focus the node in the given direction
# hold shift to switch nodes in that direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Smart resize, will grow or shrink depending on location.
# Will always grow for floating nodes.
super + alt + {h,j,k,l}
  n=10; \
  { d1=left;   d2=right;  dx=-$n; dy=0;   \
  , d1=bottom; d2=top;    dx=0;   dy=$n;  \
  , d1=top;    d2=bottom; dx=0;   dy=-$n; \
  , d1=right;  d2=left;   dx=$n;  dy=0;   \
  } \
  bspc node --resize $d1 $dx $dy || bspc node --resize $d2 $dx $dy
 

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# un/hide currently active window
super + {_,shift} + u
    ~/.config/bspwm/misc/toggle {hide,show}

# to change layouts
alt + ctrl + {1,2,3}
  ~/.config/bspwm/config_scheme.sh {first_child,longest_side,spiral}

